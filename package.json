{
  "name": "betwizz-web-tools",
  "version": "1.0.0",
  "description": "Build and optimization tools for Betwizz web app",
  "scripts": {
    "build": "flutter build web --release --web-renderer canvaskit --dart-define=FLUTTER_WEB_USE_SKIA=true",
    "build:analyze": "npm run build && node scripts/bundle-analyzer.js",
    "serve": "cd build/web && python3 -m http.server 8080",
    "test:build": "bash scripts/test-optimized-build.sh",
    "optimize": "bash scripts/optimize_for_web.sh",
    "lighthouse": "lhci autorun",
    "size-check": "bundlesize",
    "deploy": "firebase deploy --only hosting"
  },
  "devDependencies": {
    "@lhci/cli": "^0.12.0",
    "bundlesize": "^0.18.1",
    "gzip-size-cli": "^5.1.0"
  },
  "bundlesize": [
    {
      "path": "build/web/main.dart.js",
      "maxSize": "8.5MB",
      "compression": "gzip"
    }
  ],
  "engines": {
    "node": ">=16.0.0"
  }
}
